<div class="section-page-intro">
  <div class="container">
    <div class="outer">
      <div class="inner">
        <h1 class="h1 title">Reimposta la password dell'account</h1>
        <div class="summary">
          <p>Scegli e conferma la tua nuova password.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="login-form-outer">
    <div class="form">
      {%- form 'reset_customer_password' -%}
        {%- if form.errors -%}
          <div class="feedback-notice error">
            <p><strong>Attenzione, si sono verificati i seguenti errori:</strong></p>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#RegisterForm-{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
        <div class="form">
          <div class="fields">
            <div class="field wide">
              <input
                type="password"
                name="customer[password]"
                id="password"
                autocomplete="new-password"
                {% if form.errors contains 'password' %}
                  aria-invalid="true"
                  aria-describedby="password-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password' | t }}"
              >
            </div>
            <div class="field wide">
              <input
                type="password"
                name="customer[password_confirmation]"
                id="password_confirmation"
                autocomplete="new-password"
                {% if form.errors contains 'password_confirmation' %}
                  aria-invalid="true"
                  aria-describedby="password_confirmation-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
              >
            </div>
          </div>
        </div>
        <button class="button big">{{ 'customer.reset_password.submit' | t }}</button>
      {%- endform -%}
    </div>
  </div>
</div>
